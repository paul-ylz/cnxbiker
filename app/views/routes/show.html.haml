#map
#text
  .row
    .route-side.small-12.large-4.columns
      %h4.route-title= @route.title

      %ul.inline-list
        %li
          %strong= number_to_human @route.track.distance, units: { unit: 'km' }
          %label Distance
        %li
          %strong= number_to_human @route.track.total_ascent, units: { unit: 'm' }
          %label Total Ascent

      = content_tag 'h6', id: 'track', data: { url: @route.track.gpx.url } do
        = link_to track_download_path(@route.track), { target: '_self' } do
          Download
          = number_to_human_size @route.track.gpx_file_size

    .route-main.small-12.large-offset-1.large-7.columns
      %p= @route.description

%link{href: 'http://cdn.leafletjs.com/leaflet-0.7.3/leaflet.css', rel: 'stylesheet'}
%script{src: 'http://cdn.leafletjs.com/leaflet-0.7.3/leaflet.js'}
